<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drab"
    android:orientation="vertical"
    >

    <include layout="@layout/include_logo_bg">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.dealermanagmentsystem.utils.ui.DMSTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:text="We have sent and SMS with a code to the number."
            android:textColor="@color/snow" />

        <com.dealermanagmentsystem.utils.ui.DMSTextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:text="To complete your phone number verification, please enter the code below."
            android:textColor="@color/snow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/ic_editext_bg"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:padding="15dp"
                android:src="@drawable/ic_password" />

            <com.dealermanagmentsystem.utils.ui.DMSEditText
                android:id="@+id/et_otp"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="0.8"
                android:background="@drawable/ic_editext_bg"
                android:hint="OTP"
                android:text="5846"
                android:inputType="number"
                android:padding="15dp"
                android:textSize="15sp" />


        </LinearLayout>

        <com.dealermanagmentsystem.utils.ui.DMSButton
            android:id="@+id/btn_submit_otp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/button_bg_orange_rounded"
            android:drawableRight="@drawable/button_sigin"
            android:padding="10dp"
            android:paddingStart="40dp"
            android:text="Submit"
            android:textAllCaps="true"
            android:textColor="@color/ice"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>